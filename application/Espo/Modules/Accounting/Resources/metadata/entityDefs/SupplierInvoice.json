{
    "fields": {
        "name": {
            "type": "varchar",
            "required": true,
            "trim": true
        },
        "number": {
            "type": "varchar",
            "maxLength": "100"
        },
        "numberA": {
            "type": "sequenceNumber",
            "format": "I{YYYY}-{number}",
            "reset": "Yearly",
            "padLength": 5,
            "disabled": true
        },
        "status": {
            "type": "enum",
            "options": ["Draft", "In Review", "Confirmed", "Paid", "Rejected"],
            "style": {
                "Paid": "success",
                "Rejected": "danger"
            },
            "default": "Draft"
        },
        "dateInvoiced": {
            "type": "date",
            "default": "javascript: return this.dateTime.getNow();",
            "useNumericFormat": true
        },
        "account": {
            "type": "link"
        },
        "description": {
            "type": "text"
        },
        "billingAddress": {
            "type": "address",
            "view": "accounting:views/fields/address"
        },
        "billingContact": {
            "type": "link",
            "view": "accounting:views/invoice/fields/contact"
        },
        "taxClass": {
            "type": "link",
            "view": "product-base:views/fields/tax-class"
        },
        "taxRate": {
            "type": "float",
            "min": 0,
            "max": 100,
            "view": "product-base:views/fields/percentage"
        },
        "taxAmount": {
            "type": "currency",
            "layoutDetailDisabled": true,
            "clientReadOnly": true
        },
        "amount": {
            "type": "currency",
            "clientReadOnly": true
        },
        "grandTotalAmount": {
            "type": "currency",
            "layoutDetailDisabled": true,
            "clientReadOnly": true
        },
        "weight": {
            "type": "float",
            "min": 0,
            "readOnly": true
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true
        },
        "assignedUser": {
            "type": "link",
            "view": "views/fields/assigned-user"
        },
        "teams": {
            "type": "linkMultiple"
        },
        "items": {
            "type": "linkMultiple",
            "view": "accounting:views/fields/items",
            "recordListEnabled": true,
            "recordListLayout": "listItem",
            "recordListMandatorySelectAttributeList": ["productId"],
            "recordListCreateDisabled": false,
            "recordListLinkDisabled": true,
            "recordListRemoveDisabled": false,
            "recordListConfirmRemove": true,
            "recordListOrderByField": "order"
        },
        "attachments": {
            "type": "attachmentMultiple"
        },
        "shippingCostTaxRate": {
            "notNull": false,
            "type": "float",
            "view": "product-base:views/fields/percentage"
        },
        "shippingCost": {
            "type": "currency",
            "view": "product-base:views/fields/currency-amount-only"
        },
        "purchaseOrder": {
            "type": "link"
        },
        "handoverProtocols": {
            "type": "linkMultiple",
            "layoutDetailDisabled": false,
            "layoutMassUpdateDisabled": false,
            "layoutListDisabled": false,
            "noLoad": false,
            "importDisabled": false,
            "exportDisabled": false,
            "customizationDisabled": true,
            "isCustom": true
        },
        "deliveryNotes": {
            "type": "linkMultiple",
            "layoutDetailDisabled": false,
            "layoutMassUpdateDisabled": false,
            "layoutListDisabled": false,
            "noLoad": false,
            "importDisabled": false,
            "exportDisabled": false,
            "customizationDisabled": true,
            "isCustom": true
        }
    },
    "links": {
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "taxClass": {
            "type": "belongsTo",
            "entity": "TaxClass"
        },
        "account": {
            "type": "belongsTo",
            "entity": "Account",
            "foreign": "invoices"
        },
        "billingContact": {
            "type": "belongsTo",
            "entity": "Contact",
            "foreign": "invoicesBilling"
        },
        "items": {
            "type": "hasMany",
            "entity": "SupplierInvoiceItem",
            "foreign": "supplierInvoice",
            "layoutRelationshipsDisabled": true
        },
        "attachments": {
            "type": "hasChildren",
            "entity": "Attachment",
            "foreign": "parent",
            "relationName": "attachments"
        },
        "assignedUser": {
            "type": "belongsTo",
            "entity": "User"
        },
        "teams": {
            "type": "hasMany",
            "entity": "Team",
            "relationName": "EntityTeam",
            "layoutRelationshipsDisabled": true
        },
        "purchaseOrder": {
            "type": "belongsTo",
            "entity": "PurchaseOrder",
            "foreign": "supplierInvoices"
        },
        "handoverProtocols": {
            "type": "hasMany",
            "foreign": "supplierInvoice",
            "entity": "HandoverProtocol",
            "audited": false,
            "isCustom": true
        },
        "deliveryNotes": {
            "type": "hasMany",
            "foreign": "supplierInvoice",
            "entity": "DeliveryNote",
            "audited": false,
            "isCustom": true
        }
    },
    "collection": {
        "sortBy": "createdAt",
        "asc": false,
        "textFilterFields": ["name", "number"]
    }
}
